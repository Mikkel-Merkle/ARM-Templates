{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        // "releaseNumber": {
        //     "type": "string"
        // },
        "environment": {
            "type": "string",
            "allowedValues": ["dev", "tst", "prd"],
            "defaultValue": "dev"
        },
        "deploymentId": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        // "storageAccounts_steuwefestivaltst_name": {
        //     "defaultValue": "steuwefestivaltst",
        //     "type": "String"
        // },
        // "sites_app_euwe_festival_portal_tst_be_name": {
        //     "defaultValue": "app-euwe-festival-portal-[parameters('environment')]-be",
        //     "type": "String"
        // },
        // "serverfarms_asp_euwe_festival_portal_shs_be_externalid": {
        //     "defaultValue": "/subscriptions/a71da313-d2a0-4395-9150-df3d724d32d3/resourceGroups/rg-euwe-festival-shs/providers/Microsoft.Web/serverfarms/asp-euwe-festival-portal-shs-be",
        //     "type": "String"
        // },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "sku": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ],
            "metadata": {
                "description": "Describes plan's pricing tier and instance size. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
            }
        }
        // ,
        // "templateLinkBase": {
        //     "type": "string",
        //     "defaultValue": "[uri('https://raw.githubusercontent.com/Mikkel-Merkle/ARM-Templates', '.')]"
        // }
    },
    "functions": [
    {
        "namespace": "Merkle",
        "members": {
            "namingConvention": {
                "output": {
                    "type": "string",
                    "value": "[substring(resourceGroup().name, 2)]"
                }
            },            
            "shortNamingConvention": {
                "output": {
                    "type": "string",
                    "value": "[replace(substring(resourceGroup().name, 2), '-', '')]"
                }
            }
        }
    }
    ],
    "variables": {
        "resourcesApiVersion": "2022-09-01",
        "storageAccountName": "[concat('st', Merkle.shortNamingConvention(), parameters('environment'))]",
        "appServicePlanName": "[concat('asp', Merkle.namingConvention(), '-', parameters('environment'), 'cms')]",
        "appName": "[concat('app', Merkle.namingConvention(), '-', parameters('environment'), 'cms')]"
    },
    "resources": [
        {
            "apiVersion": "[variables('resourcesApiVersion')]",
            "name": "[concat(parameters('deploymentId'), '-storageAccount')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/storageAccount.json"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "deploymentId": {
                        "value": "[parameters('deploymentId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "apiVersion": "[variables('resourcesApiVersion')]",
            "name": "[concat(parameters('deploymentId'), '-cms')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/site.json"
                },
                "parameters": {
                    "cmsHostingPlanName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "cmsAppName": {
                        "value": "[parameters('deploymentId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "sku": {
                        "value": "[parameters('sku')]"
                    }
                }
            }
        }
        // ,
